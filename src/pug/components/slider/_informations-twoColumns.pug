// - MIXIN ADD ELEMENTS SLIDER 
mixin informations-slider-elements(className, images, alt, header, text, slimText)
	div(class="carousel-item" class=className)
		div.row
			div.col-xl-7.col-lg-6
				div.informations-slider__images
					img(src=images, alt=alt)
			div.col-xl-5.col-lg-6
				div.informations-slider__text
					h3(class="header-text_underline")=header
					p(class="paragraph-text")=text
					div(class="small-text-addColor")=slimText

section.informations-twoColumn.section-wrapper
	div.container
		div.box-centered
			div.col-xl-6
				div.box-centered__text
					h2 Lorem ipsum dolor sit amet
					p.paragraph-text-bold.
						Lorem ipsum dolor sit amet consectetur adipisicing elit consectetur adipisicing elit elit consectetur adipisicing elit.
		div#carouselExampleControls.carousel.slide(data-bs-ride='carousel')
			div.informations-slider
				div.carousel-inner
					+informations-slider-elements(
						'active',
						'images/slider/text-and-background/spotkanie.jpg',
						'jestem tutaj',
						'Lorem ipsum dolor sit amet',
						'Lorem ipsum dolor sit amet consectetur adipisicing elit consectetur adipisicing elit elit consectetur adipisicing elit.',
						'Lorem ipsum')
					+informations-slider-elements(
						'',
						'images/slider/text-and-background/spotkanie-dwa.webp',
						'jestem tutaj',
						'Lorem ipsum dolor sit amet',
						'Lorem ipsum dolor sit amet consectetur adipisicing elit consectetur adipisicing elit elit consectetur adipisicing elit.',
						'Lorem ipsum')
					+informations-slider-elements(
						'',
						'images/slider/text-and-background/meetap.jpg',
						'jestem tutaj',
						'Lorem ipsum dolor sit amet',
						'Lorem ipsum dolor sit amet consectetur adipisicing elit consectetur adipisicing elit elit consectetur adipisicing elit.',
						'Lorem ipsum')
			a.carousel-control-prev.informations-slider__button(href='#carouselExampleControls' role='button' data-bs-slide='prev')
				span.carousel-control-prev-icon(aria-hidden='true')
				span.visually-hidden Previous
			a.carousel-control-next.informations-slider__button(href='#carouselExampleControls' role='button' data-bs-slide='next')
				span.carousel-control-next-icon(aria-hidden='true')
				span.visually-hidden Next
